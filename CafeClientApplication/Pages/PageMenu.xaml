<Page x:Class="CafeClientApplication.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CafeClientApplication.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1920"
      Title="PageMenuCashier">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Меню" Style="{StaticResource Label}"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="0, 0, 0, 50">
            <Button Name="btnProducts" Content="Блюда" Click="btnProducts_Click"/>
            <Button Name="btnCombo" Content="Наборы" Click="btnCombo_Click"/>
            <Button Name="btnOrders" Content="Мои заказы" Click="btnOrders_Click"/>
        </StackPanel>

        <Button Name="btnAddOrder" Content="Создать заказ" Click="btnAddOrder_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 500, 0, 0" Grid.Row="1" Height="120" />
        <Button Name="btnUser" Content="Мой аккаунт" Click="btnUser_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 500" Grid.Row="1" Height="120" />
    </Grid>
</Page>
