@*@model ProductsListViewModel
*@

<h1>ListProducts</h1>

@{
    foreach (var prod in Model.getAllProducts)
    {
        <div>
            <h2>Название: @prod.Title</h2>
            <p>Категория: @prod.ProductType</p>
            <p>Описание: @prod.Description</p>
            <p>Состав: @prod.FoodStaffList</p>
            <p>Цена: @prod.Cost.ToString("c")</p>
        </div>
    }
}

