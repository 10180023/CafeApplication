<Window x:Class="CafeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeApplication"
        mc:Ignorable="d"
        Title="CafeApplication" Height="1080" Width="1920" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="AliceBlue"/>
        <Rectangle Grid.Row="2" Fill="AliceBlue"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50, 0, 0, 0">
            <Image Height="180" Width="180" Source="/Resources/cafe.png"/>
            <Label Content="Кафе" VerticalAlignment="Center" FontSize="48"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0, 0, 80, 0">
            <TextBlock Text="Здравствуйте,"/>
            <TextBlock Name="tbName"/>
        </StackPanel>
        
        <Frame Name="windowFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <Button Name="btnBack" Content="Назад" Grid.Row="2" Click="btnBack_Click" HorizontalAlignment="Left" Margin="30, 5, 5, 5"/>
        <Button Name="btnExit" Content="Выход" Grid.Row="2" Click="btnExit_Click" HorizontalAlignment="Right" Margin="5, 5, 30, 5"/>
    </Grid>
</Window>
